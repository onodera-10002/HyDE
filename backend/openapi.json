{
  "openapi": "3.1.0",
  "info": {
    "title": "Aozora RAG API",
    "version": "0.1.0"
  },
  "paths": {
    "/chat/": {
      "post": {
        "tags": [
          "Chat"
        ],
        "summary": "Chat Endpoint",
        "operationId": "chat_endpoint_chat__post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ChatInput"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ChatOutput"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AnswerItems": {
        "properties": {
          "response": {
            "type": "string",
            "title": "Response"
          },
          "sources": {
            "anyOf": [
              {
                "items": {
                  "$ref": "#/components/schemas/SourceItem"
                },
                "type": "array"
              },
              {
                "type": "null"
              }
            ],
            "title": "Sources"
          }
        },
        "type": "object",
        "required": [
          "response"
        ],
        "title": "AnswerItems"
      },
      "ChatInput": {
        "properties": {
          "questions": {
            "anyOf": [
              {
                "items": {
                  "type": "string"
                },
                "type": "array",
                "maxItems": 10,
                "minItems": 1
              },
              {
                "type": "null"
              }
            ],
            "title": "Questions",
            "examples": [
              [
                "質問1",
                "質問2",
                "質問3"
              ]
            ]
          }
        },
        "type": "object",
        "title": "ChatInput"
      },
      "ChatOutput": {
        "properties": {
          "responses": {
            "anyOf": [
              {
                "items": {
                  "$ref": "#/components/schemas/AnswerItems"
                },
                "type": "array"
              },
              {
                "type": "null"
              }
            ],
            "title": "Responses"
          }
        },
        "type": "object",
        "title": "ChatOutput",
        "description": "チャットボットの出力データの仕様書"
      },
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "SourceItem": {
        "properties": {
          "title": {
            "type": "string",
            "title": "Title"
          },
          "url": {
            "type": "string",
            "title": "Url"
          }
        },
        "type": "object",
        "required": [
          "title",
          "url"
        ],
        "title": "SourceItem"
      },
      "ValidationError": {
        "properties": {
          "loc": {
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            },
            "type": "array",
            "title": "Location"
          },
          "msg": {
            "type": "string",
            "title": "Message"
          },
          "type": {
            "type": "string",
            "title": "Error Type"
          }
        },
        "type": "object",
        "required": [
          "loc",
          "msg",
          "type"
        ],
        "title": "ValidationError"
      }
    }
  }
}